.sec-kv
  width 100%
  padding-top per(1316,750)
  height 0
  position relative
  +sp()
    max-width 100% !important
    min-width 100% !important
    width 100%
    overflow hidden
    position relative
    height calc(100vh - 132px)


  &__content
    background url('../images/kv.jpg') 50% 0 no-repeat
    background-size 100% auto
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    opacity 0
    transition 4s all ease
    &.is-show
      opacity 1
    &__inner
      padding 120px 30px 0

  &__title
    background url('../images/img_kv_title.png') 50% 0 no-repeat
    background-size 100% auto
    width per(509,690)
    height 0
    padding-top per(39,509)
    margin 0 0 per(50,690) per(24,690)
    opacity 0
    transition 3s all ease
    transform translateY(20px)
    // font-size 4.2rem
    // line-height 1
    // margin-bottom 50px
    // letter-spacing 8px
    &.is-show
      opacity 1
      transform translateY(0)

  &__lead
    background url('../images/img_kv_lead.png') 50% 0 no-repeat
    background-size 100% auto
    width per(483,690)
    height 0
    padding-top per(813,690)
    margin 0 0 per(40,690) per(24,690)
    opacity 0
    transition 3s all ease
    transform translateY(20px)
    &.is-show
      opacity 1
      transform translateY(0)
    // font-size 2.2rem
    // line-height 2
    // margin-bottom 40px
    // font-weight bold
    // letter-spacing 6px

  &__logo
    background url('../images/logo.png') 50% 0 no-repeat
    background-size 100% auto
    width 248px
    height 120px
    position absolute
    top 846px
    right 30px
    opacity 0
    transition 3s all ease
    transform translateY(20px)
    &.is-show
      opacity 1
      transform translateY(0)

  &__scroll
    position absolute
    bottom 0
    left 0
    width 100%
    padding 0 0 55px
    font-family sans-serif !important
    font-size 12px
    font-weight 300
    color #fff
    text-align center
    letter-spacing .08em
    transform translateY(20px)
    opacity 0
    transition 3s all ease
    +sp()
      padding 0 0 50px

    &.is-show
      opacity 1
      transform translateY(0)

    &:after
      position absolute
      right 0
      bottom 0
      left 0
      display block
      width 2px
      height 40px
      margin 0 auto
      content ""
      background-color #fff
      +sp()
        width 1px


.sec-info
  width per(690)
  margin 78px auto 120px

  &__brn
    display flex
    flex-wrap nowrap
    justify-content space-between
    margin-bottom per(80)
    li
      width per(330,690)
      height 68px

      &:nth-of-type(1)
        a
          background: url('../images/img_btn_about.png') 50% 0 no-repeat
          background-size: 100% auto
      &:nth-of-type(2)
        a
          background: url('../images/img_btn_news.png') 50% 0 no-repeat
          background-size: 100% auto
      a
        display block
        width 100%
        height 100%
        text-indent 100%
        white-space nowrap
        overflow hidden

  &__sns
    display flex
    flex-wrap nowrap
    justify-content space-between
    width per(414)
    margin 0 auto per(40)
    +pc()
      width per(164,690)
    li
      width 66px
      height 66px
      &:last-child
        +pc()
          display none
    a
      display block
      text-indent 100%
      white-space nowrap
      overflow hidden
      &.tw
        background: url('../images/ico_tw.png') 50% 0 no-repeat
        background-size: 100% auto
        width 100%
        height 100%
      &.fb
        background: url('../images/ico_fb.png') 50% 0 no-repeat
        background-size: 100% auto
        width 100%
        height 100%
      &.line
        background: url('../images/img_btn_news.png') 50% 0 no-repeat
        background-size: 100% auto
        width 100%
        height 100%
        +pc()
          display none
  &__desc
    *
      font-size 1.4rem
    p:nth-of-type(1)
      margin-bottom 20px
    li
      line-height 2




