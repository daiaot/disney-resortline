#page-top
  position fixed
  bottom 20px
  right 20px

  a
    position fixed
    right 20px
    bottom 20px
    z-index 100
    background-color #999
    opacity 0.8
    width 50px
    height 50px
    border-radius 50%
    border none
    color #fff

    &:before
      content ''
      display block
      position absolute
      top 54%
      left 50%
      transform translate(-50%, -50%) rotate(-45deg)
      width 8px
      height 8px
      border-top solid 2px #fff
      border-right solid 2px #fff

  &:hover
    cursor pointer

.scroll-top
  position fixed
  right 20px
  bottom 20px
  z-index 100
  background-color #999
  opacity 0.8
  width 50px
  height 50px
  border-radius 50%
  border none
  color #fff

  &:hover
    cursor pointer
