html
  height 100%
  font-size (10 / 375) * 100vw

  +pc()
    font-size 10px
    // font-size (10 / 1600) * 100vw

body
  font-family '游明朝体', 'Yu Mincho', YuMincho, 'ヒラギノ明朝 Pro', 'Hiragino Mincho Pro', 'MS P明朝', 'MS PMincho', serif
  // font-family 'Noto Serif CJK jp', serif, sans-serif
  font-size 1.5rem
  // font-weight 500
  font-weight normal
  color #404040
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

/* アンチエイリアスを有効にさせたい要素に指定 */
_:lang(x)::-ms-backdrop,
h1,
h2,
h3,
h4,
p,
a,
span,
li,
dt,
dd
  -webkit-transform rotate(0.028deg)
  -ms-transform rotate(0.028deg)
  transform rotate(0.028deg)

h1,
h2,
h3,
h4
  font-weight normal
  margin 0
  padding 0

p
  font-size 1.5rem
  line-height 2
  margin 0
  // color #404040

a
  transition opacity 0.4s
  text-decoration none

  &:hover
    opacity 0.6

_:lang(x)::-ms-backdrop,
h1,
h2,
h3,
h4
  font-weight 700
  transform rotate(0.028deg)
  transform rotate(0.028deg)

ul,
li,
dl,
dt,
dd
  margin 0
  padding 0

*
  box-sizing border-box

ul
  list-style-type none

@media screen and (min-width: 795px) and (max-width: 1088px)
  html
    font-size (10 / 1040) * 100vw